{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "serve",
			"problemMatcher": [
				"$eslint-compact"
			]
		},
		{
			"type": "npm",
			"script": "build",
			"problemMatcher": [
				"$eslint-compact"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "dev",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"type": "npm",
			"script": "hot",
			"problemMatcher": [
				"$eslint-compact"
			]
		},
		{
			"type": "npm",
			"script": "clear-cache",
			"problemMatcher": []
		}
	]
}